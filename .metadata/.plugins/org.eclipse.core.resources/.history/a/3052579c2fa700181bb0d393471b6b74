package footballScoresExample;

public class FootballGame {

	private int team1Score;
	private int team2Score;
	private String team1Name;
	private String team2Name;
	private boolean gameComplete;
	
	public FootballGame() {
		this.team1Score = 0;
		this.team2Score = 0;
		this.team1Name = "";
		this.team2Name = "";
	}
	
	public FootballGame(String team1Name, String team2Name, int team1Score, int team2Score) {
		
	}
	
	
	
	public int returnWinner(int team1, int team2) {
		
		if(team1 > team2) {
			gameComplete = true;
			return team1;
			
		}else if(team1 == team2) {
			System.out.println("Play on! its a tie.");
			
		}else {
			gameComplete = true;
			return team2;
		}
			
		
	}
	
	
}
