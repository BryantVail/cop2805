package week07;

public class MyArrayList {
	
	//main data structure
	private Object[] internalArray;
	private int internalArraySize;
	
	
	MyArrayList(){
		internalArray = new Object[10];
	}
	
	public void add(Object obj) {
		
	}
	
	public Object get(int n) {
		//by index
		return internalArray[n];
	}
	
	public void delete(int n) {
		int indexOfItemToBeDeleted = findIndex(internalArray, internalArray[n]);
		for(int i = indexOfItemToBeDeleted; i < internalArray.length ; i++) {
			internalArray[i] = internalArray[i+1];
		}
	}
	
	public int findIndex(Object[] objs, Object objToFind) {
		int returned = -1;
		for(int i = 0; i<objs.length; i++) {
			if(objToFind == objs[i]) {
				returned = i;
				
			}
			else {
				returned = -1;
			}
		}
		return returned;
		
	}
	
	public int size() {
		return internalArraySize;
	}

}
